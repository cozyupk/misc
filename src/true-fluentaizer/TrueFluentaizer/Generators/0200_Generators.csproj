<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Library</OutputType>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<OutputItemType>Analyzer</OutputItemType>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
		<RootNamespace>TrueFluentaizer.Generators</RootNamespace>
		<AssemblyName>TrueFluentaizer.Generators</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" />
		<PackageReference Include="System.Collections.Immutable" Version="9.0.7" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\\Abstractions\*.cs" Link="Utils\Abstractions\%(Filename)%(Extension)" />
		<Compile Include="..\..\PartialClassExtensionGenalyzer\Abstractions\0110_Analyzer\*.cs" Link="Utils\PCEG.Abstractions\%(Filename)%(Extension)" />
		<Compile Include="..\..\PartialClassExtensionGenalyzer\Abstractions\0120_Generator\*.cs" Link="Utils\PCEG.Abstractions\%(Filename)%(Extension)" />
		<Compile Include="..\..\PartialClassExtensionGenalyzer\Abstractions\0130_Common\*.cs" Link="Utils\PCEG.Abstractions\%(Filename)%(Extension)" />
		<Compile Include="..\..\PartialClassExtensionGenalyzer\Utils\*.cs" Link="Utils\PCEG.Utils\%(Filename)%(Extension)" />
		<Compile Include="..\..\PartialClassExtensionGenalyzer\AnalyzerBase\*.cs" Link="Utils\PCEG.AnalyzerBase\%(Filename)%(Extension)" />
		<Compile Include="..\..\PartialClassExtensionGenalyzer\GeneratorBase\*.cs" Link="Utils\PCEG.GeneratorBase\%(Filename)%(Extension)" />
		<Compile Include="..\..\PartialClassExtensionGenalyzer\GenalyzerBase\*.cs" Link="Utils\PCEG.GenalyzerBase\%(Filename)%(Extension)" />
	</ItemGroup>
	
</Project>
